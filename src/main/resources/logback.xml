<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <!-- Keep SQL (PREPARING and PARAMETERS) -->
    <logger name="org.apache.ibatis.logging.jdbc.BaseJdbcLogger" level="INFO"/>

    <!-- Suppress session/transaction logs -->
    <logger name="org.mybatis.spring.SqlSessionUtils" level="WARN" />
    <logger name="org.mybatis.spring.transaction.SpringManagedTransaction" level="WARN" />


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
